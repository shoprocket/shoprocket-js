{
  "name": "@shoprocket/widget",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Shoprocket Widget - Drop-in eCommerce solution",
  "main": "dist/loader.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run build:dev",
    "build:production": "npm run build:prod",
    "build:dev": "npm run clean && npm run build:loader && npm run build:iife && npm run build:esm",
    "build:prod": "NODE_ENV=production npm run clean && npm run build:loader:prod && npm run build:bundle:prod",
    "build:loader": "vite build --config vite.config.loader.mts",
    "build:loader:prod": "NODE_ENV=production vite build --config vite.config.loader.prod.mts",
    "build:iife": "vite build",
    "build:bundle:prod": "NODE_ENV=production vite build --config vite.config.prod.mts",
    "build:esm": "vite build --config vite.config.esm.mts",
    "build:watch": "vite build --watch --config vite.config.esm.mts",
    "watch": "vite build --watch --config vite.config.esm.mts",
    "watch:iife": "vite build --watch",
    "watch:esm": "vite build --watch --config vite.config.esm.mts",
    "preview": "vite preview",
    "test": "vitest",
    "lint": "eslint src",
    "clean": "rm -rf dist",
    "clean:esm": "rm -rf dist-esm",
    "size": "npm run build && ls -lh dist/",
    "size:prod": "npm run build:prod && ls -lh dist/loader.js dist/*shoprocket*.js"
  },
  "keywords": [
    "shoprocket",
    "ecommerce",
    "widget",
    "shopping-cart",
    "embed"
  ],
  "author": "Shoprocket Ltd. <dev@shoprocket.io>",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/shoprocket/shoprocket-js.git",
    "directory": "packages/widget"
  },
  "dependencies": {
    "@lit/context": "^1.1.6",
    "@shoprocket/core": "file:../core",
    "lit": "^3.1.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.13",
    "@types/node": "^20.10.0",
    "autoprefixer": "^10.4.21",
    "rollup-plugin-visualizer": "^6.0.3",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.3.0",
    "vite": "^7.1.5",
    "vitest": "^3.2.4"
  }
}
